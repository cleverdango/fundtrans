<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <!-- 允许动态方法调用 -->
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <!-- 开发模式，便于调试 -->
    <constant name="struts.devMode" value="true"/>
    <!-- 配置文件修改了，不需要重启服务器-->
    <constant name="struts.configuration.xml.reload" value="true"/>
    <!-- jsp中不使用struts的样式 -->
    <constant name="struts.ui.theme" value="simple"/>
    <!-- Action所在的包的后缀 -->
    <constant name="struts.convention.package.locators" value="action,actions,struts,struts2"/>

    <package name="fund" namespace="/fund" extends="struts-default">

        <!-- 动态方法调用测试 -->
        <action name="fundAction" class="com.mybank.fundtrans.controller.FundAction">
            <result name="login">/login.jsp</result>
            <result name="index" type="redirect">/index.jsp</result>
        </action>
        <!-- 使用通配符简化配置 -->
        <action name="*Fund" class="com.mybank.fundtrans.controller.FundAction"
                method="{1}">
            <result name="success" type="chain">showFund</result><!-- 默认的type是dispatcher -->
            <result name="renderFundList">/fund/fund_list.jsp</result>

        </action>

        <action name="preUpdate" class="com.mybank.fundtrans.controller.FundAction"
                method="preUpdate">
            <result name="prepared">/fund/fund_update.jsp</result>
        </action>
        <action name="fund_add">
            <result name="success">/fund/fund_add.jsp</result>
        </action>

        <!--客户类-->
        <action name="*Client" class="com.mybank.fundtrans.controller.ClientAction"
                method="{1}">
            <result name="success" type="chain">showClient</result><!-- 默认的type是dispatcher -->
            <result name="renderClientList">/Client/Client_list.jsp</result>

        </action>

        <action name="preUpdate" class="com.mybank.fundtrans.controller.ClientAction"
                method="preUpdate">
            <result name="prepared">/client/client_update.jsp</result>
        </action>
        <action name="client_add">
            <result name="success">/client/client_add.jsp</result>
        </action>


        <!-- 用于链接请求 -->


    </package>

    <!--<include file="example.xml"/> -->

    <!-- Add packages here -->

</struts>
